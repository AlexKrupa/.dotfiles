# This file is written in HOCON (Human-Optimized Config Object Notation) format.
# For more information about HOCON see https://github.com/lightbend/config/blob/master/HOCON.md

bindings {
  # [f]ormat / re[f]actor
  f {
    description: "Format/Refactor..."
    bindings {
      # Main operations
      m { actionId: Move, description: "Move" }
      n { actionId: RenameElement, description: "Rename Element" }
      o { actionId: OptimizeImports, description: "Optimize Imports" }
      # Structural search
      s {
        description: "Structural..."
        bindings {
          s { actionId: StructuralSearchPlugin.StructuralSearchAction, description: "Structural Search" }
          r { actionId: StructuralSearchPlugin.StructuralReplaceAction, description: "Structural Replace" }
        }
      }
    }
  }

  # [m]enus and book[m]arks
  m {
    description: "Menus/Bookmarks..."
    bindings {
      a { actionId: "com.developerphil.adbidea.action.AdbIdeaQuickList", description: "ADB Idea Menu" }
      b { actionId: ShowBookmarks, description: "Show Bookmarks" }
      l { actionId: AnalyzeMenu, description: "Analyze Menu" }
      p { actionId: ManageRecentProjects, description: "Manage Recent Projects" }
      s { actionId: ScopeViewPopupMenu, description: "Scope View Menu" }
      t { actionId: ToolWindowsGroup, description: "Tool Windows" }
    }
  }

  # [r]un
  r {
    description: "Run..."
    bindings {
      c { actionId: ChooseRunConfiguration, description: "Choose Run Configuration" }
      d { actionId: DebugClass, description: "Debug Class" }
      f { actionId: RerunFailedTests, description: "Rerun Failed Tests" }
      g { actionId: "Android.SyncProject", description: "Sync Project (Android)" }
      q { actionId: Stop, description: "Stop" }
      r { actionId: Rerun, description: "Rerun" }
      t { actionId: RunClass, description: "Run Class" }
    }
  }

  # [s]earch
  s {
    description: "Search..."
    bindings {
      a { actionId: GotoAction, description: "Search Actions" }
      c { actionId: GotoClass, description: "Search Classes" }
      e { actionId: SearchEverywhere, description: "Search Everywhere" }
      f { actionId: GotoFile, description: "Search Files" }
      l { actionId: RecentLocations, description: "Recent Locations" }
      o { actionId: ReplaceInPath, description: "Replace in Path" }
      p { actionId: FindInPath, description: "Find in Path" }
      r { actionId: RecentFiles, description: "Recent Files" }
      s { actionId: GotoSymbol, description: "Search Symbols" }
      t { actionId: TextSearchAction, description: "Text Search" }
    }
  }

  # [t]ool windows
  t {
    description: "Tool Windows..."
    bindings {
      b { actionId: ActivateBuildToolWindow, description: "Build" }
      c { actionId: ActivateCommitToolWindow, description: "Commit" }
      d { actionId: ActivateDebugToolWindow, description: "Debug" }
      e { actionId: ActivateRunningDevicesToolWindow, description: "Running Devices" }
      f { actionId: ActivateFindToolWindow, description: "Find" }
      h { actionId: ActivateHierarchyToolWindow, description: "Hierarchy" }
      l { actionId: ActivateLogcatToolWindow, description: "Logcat" }
      p { actionId: ActivateProjectToolWindow, description: "Project" }
      r { actionId: ActivateRunToolWindow, description: "Run" }
      s { actionId: ActivateStructureToolWindow, description: "Structure" }
      v { actionId: ActivateVersionControlToolWindow, description: "Version Control" }
      w { actionId: ActivateBuildVariantsToolWindow, description: "Build Variants" }
      x { actionId: HideActiveWindow, description: "Hide Active Window" }
    }
  }

  # [u]sages
  u {
    description: "Usages..."
    bindings {
      f { actionId: FindUsages, description: "Find Usages" }
      s { actionId: ShowUsages, description: "Show Usages" }
    }
  }

  # [v]ersion control
  v {
    description: "Version Control..."
    bindings {
      # Main VCS menu
      v { actionId: "Vcs.QuickListPopupAction", description: "VCS Quick List" }
      # VCS operations
      c { actionId: "Git.Commit.Stage", description: "Commit/Stage" }
      d { actionId: "Compare.SameVersion", description: "Compare with Same Version" }
      h { actionId: "Vcs.ShowTabbedFileHistory", description: "File History" }
      r { actionId: "Git.ResolveConflicts", description: "Resolve Conflicts" }
      z { actionId: "ChangesView.Revert", description: "Revert Changes" }
    }
  }

  # [y]ank/copy
  y {
    description: "Copy..."
    bindings {
      p { actionId: CopyAbsolutePath, description: "Copy Absolute Path" }
      r { actionId: CopyReference, description: "Copy Reference" }
    }
  }

  # [z]en/distraction-free
  z {
    description: "Zen/Distraction-Free..."
    bindings {
      p { actionId: TogglePresentationMode, description: "Presentation Mode" }
      z { actionId: ToggleDistractionFreeMode, description: "Distraction-Free Mode" }
    }
  }

  # [d]ebug
  d {
    description: "Debug..."
    bindings {
      v { actionId: ViewBreakpoints, description: "View Breakpoints" }
      x { actionId: Debug, description: "Debug" }
    }
  }

  # Hide distractions (single key)
  x { actionId: HideAllWindows, description: "Hide All Windows" }
}
