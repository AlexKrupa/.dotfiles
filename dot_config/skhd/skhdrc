# Aerospace + BetterDisplay integration

# Move
alt + ctrl + shift + cmd - h : aerospace move left && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - j : aerospace move down && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - k : aerospace move up && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - l : aerospace move right && ~/.config/share-focus/sync

# Fullscreen
alt + ctrl + shift - f : aerospace fullscreen && ~/.config/share-focus/sync

# Layout floating/tiling
alt + ctrl + shift + cmd - f : aerospace layout floating tiling && ~/.config/share-focus/sync

# Layout tiles/accordion
# slash /
alt + ctrl + shift - 0x2C : aerospace layout tiles horizontal vertical && ~/.config/share-focus/sync
# comma ,
alt + ctrl + shift - 0x2B : aerospace layout accordion horizontal vertical && ~/.config/share-focus/sync

# Resize
# minus
alt + ctrl + shift - 0x1B : aerospace resize smart -50 && ~/.config/share-focus/sync
# equal
alt + ctrl + shift - 0x18 : aerospace resize smart +50 && ~/.config/share-focus/sync

# Move to workspace
alt + ctrl + shift + cmd - y : aerospace move-node-to-workspace --focus-follows-window Y && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - u : aerospace move-node-to-workspace --focus-follows-window U && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - i : aerospace move-node-to-workspace --focus-follows-window I && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - o : aerospace move-node-to-workspace --focus-follows-window O && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - p : aerospace move-node-to-workspace --focus-follows-window P && ~/.config/share-focus/sync

# Workspace switching
alt + ctrl + shift - y : aerospace workspace --auto-back-and-forth Y && ~/.config/share-focus/sync
alt + ctrl + shift - u : aerospace workspace --auto-back-and-forth U && ~/.config/share-focus/sync
alt + ctrl + shift - i : aerospace workspace --auto-back-and-forth I && ~/.config/share-focus/sync
alt + ctrl + shift - o : aerospace workspace --auto-back-and-forth O && ~/.config/share-focus/sync
alt + ctrl + shift - p : aerospace workspace --auto-back-and-forth P && ~/.config/share-focus/sync

# Focus Ghostty terminal
alt + ctrl + shift - space : aerospace list-windows --all --format '%{window-id} | %{app-name}' | grep 'Ghostty' | head -1 | cut -d'|' -f1 | xargs -I {} aerospace focus --window-id {} && ~/.config/share-focus/sync

