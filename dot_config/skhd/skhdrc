# Aerospace + BetterDisplay integration

# Move
alt + ctrl + shift + cmd - h : aerospace move left && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - j : aerospace move down && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - k : aerospace move up && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - l : aerospace move right && ~/.config/share-focus/sync

# Fullscreen
alt + ctrl + shift - f : aerospace fullscreen && ~/.config/share-focus/sync

# Layout floating/tiling
alt + ctrl + shift + cmd - f : aerospace layout floating tiling && ~/.config/share-focus/sync

# Layout tiles/accordion
# slash /
alt + ctrl + shift - 0x2C : aerospace layout tiles horizontal vertical && ~/.config/share-focus/sync
# comma ,
alt + ctrl + shift - 0x2B : aerospace layout accordion horizontal vertical && ~/.config/share-focus/sync

# Resize
# minus
alt + ctrl + shift - 0x1B : aerospace resize smart -50 && ~/.config/share-focus/sync
# equal
alt + ctrl + shift - 0x18 : aerospace resize smart +50 && ~/.config/share-focus/sync

# Move to workspace
alt + ctrl + shift + cmd - b : aerospace move-node-to-workspace --focus-follows-window B && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - d : aerospace move-node-to-workspace --focus-follows-window D && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - g : aerospace move-node-to-workspace --focus-follows-window G && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - m : aerospace move-node-to-workspace --focus-follows-window M && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - t : aerospace move-node-to-workspace --focus-follows-window T && ~/.config/share-focus/sync
alt + ctrl + shift + cmd - w : aerospace move-node-to-workspace --focus-follows-window W && ~/.config/share-focus/sync

# Workspace switching
alt + ctrl + shift - b : aerospace workspace --auto-back-and-forth B && ~/.config/share-focus/sync
alt + ctrl + shift - d : aerospace workspace --auto-back-and-forth D && ~/.config/share-focus/sync
alt + ctrl + shift - g : aerospace workspace --auto-back-and-forth G && ~/.config/share-focus/sync
alt + ctrl + shift - m : aerospace workspace --auto-back-and-forth M && ~/.config/share-focus/sync
alt + ctrl + shift - t : aerospace workspace --auto-back-and-forth T && ~/.config/share-focus/sync
alt + ctrl + shift - w : aerospace workspace --auto-back-and-forth W && ~/.config/share-focus/sync

# Focus Ghostty terminal
alt + ctrl + shift - space : aerospace list-windows --all --format '%{window-id} | %{app-name}' | grep 'Ghostty' | head -1 | cut -d'|' -f1 | xargs -I {} aerospace focus --window-id {} && ~/.config/share-focus/sync

# Focus/workspace back-and-forth
alt + ctrl + shift - tab : (aerospace focus-back-and-forth || aerospace workspace-back-and-forth) && ~/.config/share-focus/sync

# Move workspace to next monitor
alt + ctrl + shift + cmd - tab : aerospace move-workspace-to-monitor --wrap-around next && ~/.config/share-focus/sync

